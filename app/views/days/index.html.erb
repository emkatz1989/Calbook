
<div id="user_header">
    <% if current_user != nil %>
    Logged in as <%= current_user.email %>.
    <%= link_to "Log Out", new_session_path("current") %>
    <% else %>
      <%= link_to "Sign_up", new_session_path %>
    <% end %>
</div>

<div id="calendar-container">
  <div id="calendar"></div>
</div>
