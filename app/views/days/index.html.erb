         <div id= "event_title"><%#= events_form.text_field :title, placeholder: 'title' %></div>
         <div id= "event_description"> <%#= events_form.text_field :text, placeholder: 'description' %></div>
          <div id="event_start"><%#= events_form.datetime_field :start_time, placeholder: 'start time'%></div>
          <div id= "event_end"><%#= events_form.datetime_field :end_time, placeholder: 'end time' %></div>
        <%# end %>
      </div> -->
     

          
      <div id= "image_videos_form">

        Add images
        <%= f.fields_for :image_videos do |image_form| %>
          <div id="media" input id="uploadImage" type="file" name="myPhoto">
            <%= image_form.file_field :media, placeholder: 'media'%>
            <%#= image_tag image_form.media.url(:original) %>
            
          </div>
          <div id="caption"><%= image_form.text_field :caption, placeholder: 'caption'  %></div>
        <% end %>

     </div>


      <div id= "blurbs_form">

          <!-- blurbs: -->
        <%= f.fields_for :blurbs do |blurbs_form| %>
          <div id="blurb"><%= blurbs_form.text_area :text, placeholder: 'What I Did Today', size: "51x33", rows: 3 %></div>
        <% end %>

      </div>

           
      
       
      </div>
      <div class="modal-footer">
        <div class="submit-button"><%= f.submit %></div>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
         <%end%>
