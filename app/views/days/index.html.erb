    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="modalTitle"><%= d.date.to_formatted_s(:long) %></h4>
       <!--  .readable_inspect as alt method for showing date in title -->
      </div>
      <div class="modal-body" id="modalBody">

        <%= form_for d do |f| %>
      <%#=f.text_field :date, value: d.date %>
    <!--   <div id = "events_form">
      My Events -->
        <%#= f.hidden_field :user_id, value: current_user.id %>  <%#= f.hidden_field :date, value: d.date %>
      
        <%#= f.fields_for :events do |events_form| %>

